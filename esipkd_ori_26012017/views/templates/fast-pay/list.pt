          window.open(url);
      });
      
      $('#btn_close').click(function () {
          window.location = "/"
      });

      $('#btn_delete').click(function () {
          if (mID) {
              var hapus = confirm('Hapus data ini?');
              if (hapus == true) {
                  window.location = oFormUrl+mID+'/delete';
